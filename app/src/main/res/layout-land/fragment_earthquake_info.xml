<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">


    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="405dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/dateLabel"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Date"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="419dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/depthLabel"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Depth"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/depthText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/magnitudeLabel"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="453dp"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:text="Magnitude"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/magnitudeText"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="497dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:gravity="right"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/latlongLabel"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="494dp"
        android:layout_marginTop="70dp"
        android:gravity="right"
        android:text="Lat / Long"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/latlongText"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="416dp"
        android:layout_marginTop="100dp"
        android:gravity="right"
        android:textSize="30dp"></TextView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="678dp" />

</RelativeLayout>